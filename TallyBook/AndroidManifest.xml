		<activity android:name="cn.ac.ucas.tallybook.activity.SplashActivity" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="cn.ac.ucas.tallybook.activity.MainActivity"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"
			android:windowSoftInputMode="stateVisible|adjustPan" />
		<activity android:name="cn.ac.ucas.tallybook.activity.MainTallyBookActivity"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity android:name="cn.ac.ucas.tallybook.activity.AddOrEditExpenseActivity"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
        <activity android:name="cn.ac.ucas.tallybook.activity.KeyPadActivity" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity android:name="cn.ac.ucas.tallybook.activity.NavStatisticsActivity" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
		<activity android:name="org.achartengine.GraphicalActivity" />
